<struts>
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.custom.i18n.resources" value="global" />
	<package name="default" extends="struts-default">

		<!-- ACTIONS FOR ADDING ORGANIZATIONS -->
		<action name="goToAddOrganization" class="ustsocc.action.GoToAddOrganizationAction">
			<result name="success">/add-organization.jsp</result>
		</action>
		
		<action name="addOrg" class="ustsocc.action.AddOrganizationAction">
			<!-- <interceptor-ref name="exception"/>
            	<interceptor-ref name="i18n"/>
            	<interceptor-ref name="orgImage">
       			<param name="allowedTypes">text/plain</param>
       			<param name="maximumSize">1572864</param>
  	    	</interceptor-ref>
  	    	
            <interceptor-ref name="params">
                <param name="excludeParams">dojo\..*,^struts\..*</param>
            </interceptor-ref>
            
            <interceptor-ref name="validation">
                <param name="excludeMethods">input,back,cancel,browse</param>
            </interceptor-ref>
            
            <interceptor-ref name="workflow">
                <param name="excludeMethods">input,back,cancel,browse</param>
            </interceptor-ref>
